<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.tvsoft.circlemenuanimation.FilterMenuLayout
        android:id="@+id/filter_menu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        app:cm_expandedRadius="96dp"
        app:cm_collapsedRadius="24dp"
        app:cm_centerHorizontal="true"
        app:cm_centerVertical="true"
        app:cm_centerLeft="30dp"
        app:cm_primaryColor="#ff636363"
        app:cm_primaryDarkColor="#ff292929">
    </com.tvsoft.circlemenuanimation.FilterMenuLayout>

    <com.tvsoft.circlemenuanimation.FilterMenuLayout
        android:id="@+id/filter_menu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        app:cm_expandedRadius="96dp"
        app:cm_collapsedRadius="24dp"
        app:cm_centerTop="100dp"
        app:cm_centerLeft="48dp"
        app:cm_primaryColor="#ff3163"
        app:cm_primaryDarkColor="#ce3d68">
    </com.tvsoft.circlemenuanimation.FilterMenuLayout>

    <com.tvsoft.circlemenuanimation.FilterMenuLayout
        android:id="@+id/filter_menu3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        app:cm_expandedRadius="96dp"
        app:cm_collapsedRadius="24dp"
        app:cm_centerBottom="50dp"
        app:cm_centerRight="50dp"
        app:cm_primaryColor="#ff37aa4a"
        app:cm_primaryDarkColor="#ff20622b">
    </com.tvsoft.circlemenuanimation.FilterMenuLayout>

    <com.tvsoft.circlemenuanimation.FilterMenuLayout
        android:id="@+id/filter_menu4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        app:cm_expandedRadius="96dp"
        app:cm_collapsedRadius="24dp"
        app:cm_centerBottom="50dp"
        app:cm_centerLeft="50dp"
        app:cm_primaryColor="#ff5791aa"
        app:cm_primaryDarkColor="#ff334862">
    </com.tvsoft.circlemenuanimation.FilterMenuLayout>
</FrameLayout>